<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:id="@+id/recycleListView"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_phoneitemlist_add"
        android:layout_width="52dp"
        android:layout_height="56dp"
        android:background="@drawable/circle_button"
        android:text="+"
        tools:layout_editor_absoluteX="343dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteY="659dp" />

    <Button
        android:id="@+id/btn_phoneitemlist_delete"
        android:layout_width="52dp"
        android:layout_height="56dp"

        android:background="@drawable/circle_button"
        android:text="D"
        app:layout_constraintBottom_toTopOf="@id/btn_phoneitemlist_detail"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_phoneitemlist_detail"
        android:layout_width="52dp"
        android:layout_height="56dp"
        android:background="@drawable/circle_button"
        app:layout_constraintBottom_toTopOf="@id/btn_phoneitemlist_add"
        android:text="S"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="590dp" />
</androidx.constraintlayout.widget.ConstraintLayout>