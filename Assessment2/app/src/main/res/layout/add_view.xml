<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/label_addview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Contact"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/add_addview_firstname"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="14dp" />

    <EditText
        android:id="@+id/add_addview_firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintTop_toBottomOf="@id/label_addview_title"
        app:layout_constraintBottom_toTopOf="@id/add_addview_phonenumber"
        app:layout_constraintStart_toEndOf="@id/label_addview_firstname"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="85dp" />

    <TextView
        android:id="@+id/label_addview_firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/add_addview_firstname"
        app:layout_constraintTop_toTopOf="@id/label_addview_title"
        app:layout_constraintBottom_toTopOf="@id/label_addview_phonenumber"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="100dp" />

    <TextView
        android:id="@+id/label_addview_phonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        app:layout_constraintTop_toTopOf="@id/label_addview_lastname"
        app:layout_constraintBottom_toBottomOf="@id/label_addview_date"
        app:layout_constraintEnd_toStartOf="@id/add_addview_phonenumber"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="178dp" />

    <TextView
        android:id="@+id/label_addview_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_addview_phonenumber"
        app:layout_constraintBottom_toTopOf="@id/btn_addview_add"
        app:layout_constraintEnd_toStartOf="@id/add_addview_date"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="270dp" />

    <EditText
        android:id="@+id/add_addview_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintTop_toBottomOf="@id/add_addview_phonenumber"
        app:layout_constraintBottom_toTopOf="@id/btn_addview_add"
        app:layout_constraintStart_toEndOf="@id/label_addview_date"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="255dp" />

    <EditText
        android:id="@+id/add_addview_phonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintStart_toEndOf="@id/label_addview_phonenumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_addview_lastname"
        app:layout_constraintBottom_toTopOf="@id/label_addview_date"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="165dp" />

    <Button
        android:id="@+id/btn_addview_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        app:layout_constraintTop_toBottomOf="@id/add_addview_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="341dp" />

    <TextView
        android:id="@+id/label_addview_lastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lastname"
        app:layout_constraintTop_toBottomOf="@id/label_addview_firstname"
        app:layout_constraintBottom_toTopOf="@id/label_addview_phonenumber"
        app:layout_constraintEnd_toStartOf="@id/add_addview_lastname"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="273dp" />

    <EditText
        android:id="@+id/add_addview_lastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        app:layout_constraintTop_toBottomOf="@id/add_addview_firstname"
        app:layout_constraintBottom_toTopOf="@id/add_addview_phonenumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/label_addview_lastname"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="262dp" />

</androidx.constraintlayout.widget.ConstraintLayout>