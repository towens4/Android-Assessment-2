<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/label_detailview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Details"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/detail_detailview_firstname"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="14dp" />

    <EditText
        android:id="@+id/detail_detailview_firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintTop_toBottomOf="@id/label_detailview_title"
        app:layout_constraintBottom_toTopOf="@id/detail_detailview_phonenumber"
        app:layout_constraintStart_toEndOf="@id/label_detailview_firstname"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="85dp" />

    <TextView
        android:id="@+id/label_detailview_firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/detail_detailview_firstname"
        app:layout_constraintTop_toTopOf="@id/label_detailview_title"
        app:layout_constraintBottom_toTopOf="@id/label_detailview_phonenumber"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="100dp" />

    <TextView
        android:id="@+id/label_detailview_phonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        app:layout_constraintTop_toTopOf="@id/label_detailview_lastname"
        app:layout_constraintBottom_toBottomOf="@id/label_detailview_date"
        app:layout_constraintEnd_toStartOf="@id/detail_detailview_phonenumber"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="178dp" />

    <TextView
        android:id="@+id/label_detailview_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/detail_detailview_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_detailview_phonenumber" />

    <EditText
        android:id="@+id/detail_detailview_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintTop_toBottomOf="@id/detail_detailview_phonenumber"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/label_detailview_date"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="255dp" />

    <EditText
        android:id="@+id/detail_detailview_phonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintStart_toEndOf="@id/label_detailview_phonenumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_detailview_lastname"
        app:layout_constraintBottom_toTopOf="@id/label_detailview_date"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="165dp" />

    <TextView
        android:id="@+id/label_detailview_lastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/label_detailview_firstname"
        app:layout_constraintBottom_toTopOf="@id/label_detailview_phonenumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/detail_detailview_lastname"
        android:text="Lastname"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="347dp" />

    <EditText
        android:id="@+id/detail_detailview_lastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        app:layout_constraintTop_toBottomOf="@id/detail_detailview_firstname"
        app:layout_constraintBottom_toTopOf="@id/detail_detailview_phonenumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/label_detailview_lastname"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="343dp" />


</androidx.constraintlayout.widget.ConstraintLayout>